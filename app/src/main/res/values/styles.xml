<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- custom styling for buttons -->
    <style name="ButtonStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Inherit from previous button style and add attributes specific to normal app buttons -->
    <style name="ButtonStyle.NormalButtonStyle">
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:background">@color/normal_background</item>
    </style>

    <!-- Inherit from previous button style and add attributes specific to capstone app button -->
    <style name="ButtonStyle.CapstoneButtonStyle">
        <item name="android:textColor">@color/capstone_text</item>
        <item name="android:background">@color/capstone_background</item>
    </style>
</resources>
